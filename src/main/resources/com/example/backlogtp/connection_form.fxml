<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane fx:id="grid"
          alignment="CENTER"
          hgap="10"
          vgap="10"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.example.backlogtp.ui.ConnectionFormController">

    <padding><Insets top="25" right="25" bottom="25" left="25"/></padding>

    <Text text="Log In" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2">
        <font>
            <Font name="Tahoma" size="20"/>
        </font>
    </Text>


    <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField fx:id="emailTextField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>


    <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <PasswordField fx:id="pwBox" GridPane.columnIndex="1" GridPane.rowIndex="2"/>


    <Text fx:id="customText" GridPane.columnIndex="1" GridPane.rowIndex="4"/>


    <HBox spacing="10" alignment="BOTTOM_RIGHT" GridPane.columnIndex="1" GridPane.rowIndex="5">
        <Button text="Log In" onAction="#login"/>
    </HBox>

</GridPane>
