<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:id="root"
            fx:controller="com.example.backlogtp.ui.PlannerHomeController"
            stylesheets="@home_planner.css">

    <top>
        <HBox styleClass="header">
            <padding><Insets top="20" bottom="20" right="30" left="30"/></padding>
            <Label text="Event Planner Dashboard" styleClass="header-title"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="Logout" styleClass="header-btn" onAction="#logout"/>
        </HBox>
    </top>

    <center>
        <VBox alignment="TOP_CENTER" spacing="20">
            <padding><Insets top="30" bottom="30" left="30" right="30"/></padding>

            <Label text="Créer un nouvel événement" styleClass="title"/>

            <VBox spacing="25" maxWidth="600">

                <GridPane hgap="25" vgap="15" styleClass="form-container">

                    <columnConstraints>
                        <ColumnConstraints minWidth="120" prefWidth="120" />
                        <ColumnConstraints hgrow="ALWAYS" />
                    </columnConstraints>

                    <Label text="Nom de l'événement" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                    <TextField fx:id="eventNameField" styleClass="input" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                    <Label text="Date" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                    <DatePicker fx:id="eventDatePicker" styleClass="input" GridPane.columnIndex="1" GridPane.rowIndex="1" maxWidth="Infinity"/>

                    <Label text="Lieu" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                    <TextField fx:id="eventLocationField" styleClass="input" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                    <Label text="Catégories" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                    <VBox fx:id="categoriesContainer" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

                    <Button text="Ajouter une catégorie"
                            styleClass="secondary-btn"
                            onAction="#addCategory"
                            GridPane.columnIndex="1" GridPane.rowIndex="4"/>

                    <Label text="Type d'événement" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="5"/>

                    <fx:define>
                        <ToggleGroup fx:id="eventType"/>
                    </fx:define>

                    <VBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="5">
                        <RadioButton text="Concert" toggleGroup="$eventType"/>
                        <RadioButton text="Spectacle" toggleGroup="$eventType"/>
                        <RadioButton text="Conférence" toggleGroup="$eventType"/>
                    </VBox>


                    <Button text="Créer l'événement"
                            onAction="#createEvent"
                            styleClass="primary-btn"
                            GridPane.columnIndex="1"
                            GridPane.rowIndex="7"/>

                    <Text fx:id="customText" styleClass="feedback-text" GridPane.columnIndex="1" GridPane.rowIndex="8"/>

                </GridPane>

            </VBox>

        </VBox>
    </center>

    <right>
        <VBox styleClass="sidebar" spacing="20">
            <padding><Insets top="30" bottom="30" left="30" right="30"/></padding>

            <Label text="Mes événements" styleClass="sidebar-title"/>
            <Text fx:id="eventPresenceText" styleClass="subtitle"/>

            <VBox fx:id="eventsContainer" spacing="10"/>
        </VBox>
    </right>

</BorderPane>
